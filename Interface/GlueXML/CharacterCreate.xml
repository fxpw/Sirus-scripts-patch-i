						<Layers>
							<Layer level="OVERLAY">
								<Texture name="$parentIcon" parentKey="Icon">
									<Size x="16" y="16"/>
									<Anchors>
										<Anchor point="CENTER" x="0" y="-1"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
						<Scripts>
							<OnLoad>
								self.Icon:SetAtlas("charactercreate-icon-dice")
								self.HighlightTexture:SetAtlas("charactercreate-icon-dice")
								self.NormalTexture:SetAtlas("common-button-square-gray-up")
								self.PushedTexture:SetAtlas("common-button-square-gray-down")
							</OnLoad>
							<OnMouseDown>
								if self:IsEnabled() then
									self.Icon:SetPoint("CENTER", self.PushedTexture, 0, -1);
								end
							</OnMouseDown>
							<OnMouseUp>
								self.Icon:SetPoint("CENTER", 0, -1);
							</OnMouseUp>
							<OnClick>
								PlaySound("gsCharacterCreationLook")
								self:GetParent().CreateNameEditBox:SetText(C_CharacterCreation.GenerateRandomName())
							</OnClick>
							<OnEnter>
								GlueTooltip_SetOwner(self, GlueTooltip, 9, -9, "BOTTOMRIGHT", "TOPLEFT")
								GlueTooltip_SetText(RANDOMIZE, GlueTooltip, 1, 1, 1)
							</OnEnter>
							<OnLeave>
								GlueTooltip:Hide()
							</OnLeave>
						</Scripts>

						<NormalTexture parentKey="NormalTexture"/>
						<HighlightTexture parentKey="HighlightTexture" alphaMode="ADD" alpha="0.4">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentIcon" relativePoint="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT" relativeTo="$parentIcon" relativePoint="BOTTOMRIGHT"/>
							</Anchors>
						</HighlightTexture>
						<PushedTexture parentKey="PushedTexture">
							<Anchors>
								<Anchor point="TOPLEFT" x="1" y="-1"/>
								<Anchor point="BOTTOMRIGHT" x="1" y="-1"/>
							</Anchors>
						</PushedTexture>
					</Button>
				</Frames>
				<Scripts>
					<OnLoad>
						Mixin(self, GlueEasingAnimMixin, CharacterCreateNavigationFrameMixin)

						self:OnLoad()
					</OnLoad>
				</Scripts>
			</Frame>
			<Frame name="$parentCustomizationFrame" parentKey="CustomizationFrame" hidden="true" alpha="0">
				<Size x="200" y="0"/>
				<Anchors>
					<Anchor point="LEFT" x="-200" y="200"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
				</Anchors>
				<Frames>
					<Button name="$parentRandomizeCustomizationButton" parentKey="RandomizeCustomizationButton" inherits="GlueDark_ButtonTemplate" text="RANDOMIZE">
						<Size x="200" y="32"/>
						<Scripts>
							<OnClick>
								PlaySound("gsCharacterCreationLook")
								C_CharacterCreation.RandomizeCharCustomization()
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
				<Scripts>
					<OnLoad>
						Mixin(self, GlueEasingAnimMixin, CharacterCreateCustomizationFrameMixin)

						self:OnLoad()
					</OnLoad>
					<OnShow>
						self:OnShow()
					</OnShow>
					<OnHide>
						self:OnHide()
					</OnHide>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				Mixin(self, CharacterCreateMixin)

				self:OnLoad()
			</OnLoad>
			<OnShow>
				self:OnShow()
			</OnShow>
			<OnHide>
				self:OnHide()
			</OnHide>
			<OnEvent>
				self:OnEvent(event, ...)
			</OnEvent>
			<OnUpdate>
				self:OnUpdate(elapsed)
			</OnUpdate>
			<OnKeyDown>
				self:OnKeyDown(key)
			</OnKeyDown>
			<OnMouseUp>
				self:OnMouseUp(button)
			</OnMouseUp>
			<OnMouseDown>
				self:OnMouseDown(button)
			</OnMouseDown>
		</Scripts>
	</Frame>
</Ui>